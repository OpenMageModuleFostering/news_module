<?xml version="1.0"?>
<config>
    <modules>
        <Biztech_News>
            <version>0.1.4</version>
        </Biztech_News>
    </modules>
    <frontend>
        <routers>
            <news>
                <use>standard</use>
                <args>
                    <module>Biztech_News</module>
                    <frontName>news</frontName>
                </args>
            </news>
        </routers>
        <layout>
            <updates>
                <news>
                    <file>news.xml</file>
                </news>
            </updates>
        </layout>
        <translate>
            <modules>
                <Biztech_News>
                    <files>
                        <default>Biztech_News.csv</default>
                    </files>
                </Biztech_News>
            </modules>
        </translate>
    </frontend>
   
    <admin>
        <routers>
            <adminhtml>
                    <args>
                    <modules>
                        <news after="Mage_Adminhtml">Biztech_News_Adminhtml</news>
                        </modules>
                    </args>
                </adminhtml>    
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <news module="news">
                <title>News</title>
                <sort_order>71</sort_order>               
                <children>
                    <items module="news">
                        <title>Manage News</title>
                        <sort_order>0</sort_order>
                        <action>adminhtml/news</action>
                    </items>
                   <category module="news">
                        <title>Manage Category</title>
                        <sort_order>1</sort_order>
                        <action>adminhtml/category</action>
                   </category>
                </children>
            </news>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Biztech_News>
                            <title>News Module</title>
                            <sort_order>10</sort_order>
                        </Biztech_News>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <news>
                                            <title>News</title>
                                        </news>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <news>
                    <file>news.xml</file>
                </news>
            </updates>
        </layout>
        <translate>
            <modules>
                <Biztech_News>
                    <files>
                        <default>Biztech_News.csv</default>
                    </files>
                </Biztech_News>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <news>
                <class>Biztech_News_Model</class>
                <resourceModel>news_mysql4</resourceModel>
            </news>
            <news_mysql4>
                <class>Biztech_News_Model_Mysql4</class>
                <entities>
                    <news>
                        <table>news</table>
                    </news>
                    <newsdata>
                        <table>news_data</table>
                    </newsdata>
                    <newscategory>
                        <table>news_category</table>
                    </newscategory> 
                    <newscategorydata>
                        <table>news_category_data</table>
                    </newscategorydata> 
                </entities>
            </news_mysql4>
        </models>
        <resources>
            <news_setup>
                <setup>
                    <module>Biztech_News</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </news_setup>
            <news_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </news_write>
            <news_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </news_read>
        </resources>
        <blocks>
            <news>
                <class>Biztech_News_Block</class>
            </news>
        </blocks>
        <helpers>
            <news>
                <class>Biztech_News_Helper</class>
            </news>
        </helpers>
    </global>
    <default>
        <news>
            <news_general>
                <news_list_page_layout>1column</news_list_page_layout>
                <news_detail_page_layout>1column</news_detail_page_layout>
            </news_general>
        </news>
    </default>
</config>